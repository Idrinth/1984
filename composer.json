{
  "name": "idrinth/1984",
  "description": "A small tool to remotely track bash histories",
  "keywords": ["surveillance", "monitoring", "server", "remote"],
  "authors": [{
      "name": "Björn Büttner",
      "homepage": "https://github.com/idrinth"
  }],
  "license": "MIT",
  "require": {
    "php": ">=7",
    "ext-curl": "*",
    "ext-pcntl": "*",
    "ext-openssl":"*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "phpunit/phpunit": "*",
    "symfony/process": "*"
  },
  "scripts": {
    "test": [
        "vendor/bin/phpcs --standard=psr12 bin src",
        "vendor/bin/phpunit test"
    ],
    "fix": "vendor/bin/phpcbf --standard=psr12 bin src"
  },
  "bin": ["bin/remote-logger.php"],
  "autoload": {
    "psr-4": {
      "\\De\\Idrinth\\Project1984\\": "test"
    }
  }
}